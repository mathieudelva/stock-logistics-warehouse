<odoo>

    <record id="view_stock_valuation_layer_tree_categ_inherit" model="ir.ui.view">
        <field name="name">stock.valuation.layer.tree.categ.inherit</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="categ_id" optional="show" />
            </field>
        </field>
    </record>

    <record id="stock_valuation_layer_search_view_categ_inherit" model="ir.ui.view">
        <field name="name">stock.valuation.layer.search.categ.inherit</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.view_inventory_valuation_search" />
        <field name="arch" type="xml">
            <filter name="group_by_product_id" position="after">
                <filter
                    name='group_by_categ_id'
                    string="Category"
                    context="{'group_by': 'categ_id'}"
                />
            </filter>
        </field>
    </record>

</odoo>
