<odoo>

    <record id="view_stock_quant_tree_categ_inherit" model="ir.ui.view">
        <field name="name">view.stock.quant.tree.categ.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="categ_id" />
                <field name="standard_price" optional="show" />
            </field>
        </field>
    </record>

    <record id="quant_search_view_categ_inherit" model="ir.ui.view">
        <field name="name">stock.quant.search.categ.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="categ_id" />
            </field>
            <filter name="productgroup" position="after">
                <filter
                    name='group_by_categ_id'
                    string="Category"
                    context="{'group_by': 'categ_id'}"
                />
            </filter>
        </field>
    </record>

</odoo>
