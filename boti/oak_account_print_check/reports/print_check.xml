<odoo>

    <template
        id="ckus_stub_micr_bot"
        inherit_id="l10n_us_check_printing_micr.ckus_stub_micr"
        priority="100"
    >
        <xpath expr="//div[1]" position="replace">
            <div
                t-attf-class="ckus_stub ckus_stub_{{ stub_num }}"
                style="margin-top:-10px"
            >
                <div class="row summary_line">
                    <div class="col-4 text-left">
                        <span t-esc="page['partner_name']" />
                    </div>
                    <div class="col-4 text-middle">
                        <span t-esc="page['date']" />
                    </div>
                    <div class="col-4 text-right sequence_number">
                        <span t-if="page['sequence_number']">Check No:</span>
                        <span
                            t-if="page['sequence_number']"
                            t-esc="page['sequence_number']"
                        />
                    </div>
                </div>

                <table
                    class="table table-bordered table-sm stub_lines"
                    t-if="page['stub_lines']"
                >
                    <thead>
                        <tr>
                            <th class="text-left">Invoice Date</th>
                            <th class="text-left">Reference</th>
                            <th class="text-right">Purchase Orders</th>
                            <th class="text-right">Cash Discount</th>
                            <th class="text-right">Invoice Amount</th>
                            <th class="text-right">Payment</th>
                            <th class="text-right">Balance Due</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="page['stub_lines']" t-as="stub_line">
                            <t t-if="stub_line.get('header')">
                                <tr>
                                    <th colspan="6">
                                        <t t-esc="stub_line['name']" />
                                    </th>
                                </tr>
                            </t>
                            <t t-if="not stub_line.get('header')">
                                <tr>
                                    <td class="text-left">
                                        <t
                                            t-if="stub_line['due_date']"
                                            t-esc="stub_line['due_date']"
                                        />
                                    </td>
                                    <td
                                        class="text-left text-truncate"
                                        style="max-width: 500px;"
                                    >
                                        <t t-esc="stub_line['number']" />
                                    </td>
                                    <td class="text-center">
                                        <t t-esc="stub_line['purchase_orders']" />
                                    </td>
                                    <td class="text-right">
                                        <t t-esc="stub_line['discount_taken']" />
                                    </td>
                                    <td>
                                        <t t-esc="stub_line['amount_total']" />
                                    </td>
                                    <td class="text-right">
                                        <t t-esc="stub_line['amount_paid']" />
                                    </td>
                                    <td class="text-right">
                                        <t t-esc="stub_line['amount_residual']" />
                                    </td>
                                </tr>
                            </t>
                        </t>
                        <tr t-if="page['stub_cropped']">
                            <td
                                colspan="6"
                                class="text-right"
                            >See remittance slip...</td>
                        </tr>
                    </tbody>
                </table>
                <div class="stub_total_amount">Check Amount:
                    <span class="text-nowrap">
                        <t t-esc="page['amount']" />
                    </span>
                </div>
            </div>
        </xpath>
    </template>

    <template
        id="ckus_check_micr_bot"
        inherit_id="l10n_us_check_printing_micr.ckus_check_micr"
        priority="100"
    >
        <xpath expr="//div[hasclass('sequence_number')]" position="replace">
            <div
                class="sequence_number"
                t-esc="page['sequence_number']"
                style="margin-top:-60px"
            />
        </xpath>
        <xpath expr="//div[hasclass('ckus_payee_addr_top')]" position="replace">
            <div class="row ckus_payee_addr_top">
                <div class="col-4 text-left" style="margin-top:-50px">
                    <b style="font-size:20px"><t
                            t-esc="o.company_id.partner_id.name"
                        /></b>
                    <br />
                    <t t-esc="o.company_id.partner_id.street" />
                    <br />
                    <t t-esc="o.company_id.partner_id.city" />
                    <t t-esc="o.company_id.partner_id.state_id.name" />
                    <t t-esc="o.company_id.partner_id.zip" />
                    <br />
                    <t t-esc="o.company_id.partner_id.country_id.name" />
                </div>
                <div class="col-1" />
                <div class="col-5 text-left" style="margin-top:-45px">
                    <b style="font-size:14px"><t
                            t-esc="o.journal_id.bank_id.name"
                        /></b>
                    <br />
                    <span style="font-size:12px" t-esc="o.journal_id.bank_id.street" />
                    <br />
                    <span style="font-size:12px" t-esc="o.journal_id.bank_id.city" />
                    , <span
                        style="font-size:12px"
                        t-esc="o.journal_id.bank_id.state.name"
                    />
                    <span style="font-size:12px" t-esc="o.journal_id.bank_id.zip" />
                    <br />
                    <span
                        style="font-size:12px"
                        t-esc="o.journal_id.bank_id.country.name"
                    />
                </div>
                <div class="col-2" />
            </div>
        </xpath>
        <xpath expr="//div[hasclass('ckus_payee_addr')]" position="replace">
            <div class="row ckus_payee_addr" style="margin-top:20px">
                <div
                    class="col-4 text-left"
                    t-esc="page['partner_id']"
                    t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"
                />
                <div
                    t-if="o.journal_id.bank_account_id.signature_180"
                    class="col-8 float-right"
                    t-field="o.journal_id.bank_account_id.signature_180"
                    t-options="{&quot;widget&quot;: &quot;image&quot;, &quot;style&quot;:&quot;float: right;&quot;}"
                />
            </div>
        </xpath>
        <xpath expr="//div[hasclass('ckus_sign_line')]" position="replace">
            <div class="ckus_sign_line">
                <hr style="margin-right: 15px" class="last" color="black" />
            </div>
        </xpath>
        <xpath expr="//div[hasclass('ckus_number_micr')]" position="replace">
            <div
                class="ckus_number_micr"
                style="font-size:30px; margin-top:-15px; margin-left:50px"
            >
                <span>c</span>
                <span t-esc="page['sequence_number']" />
                <span>c</span>
                <span>a</span>
                <span t-esc="o.journal_id.bank_account_id.aba_routing" />
                <span>a</span>
                <span t-field="o.journal_id.bank_account_id.acc_number" />
                <span>c</span>
            </div>
        </xpath>
    </template>

</odoo>
