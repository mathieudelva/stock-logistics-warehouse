<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="0">

        <record id="email_ticket_response_custom_external" model="mail.template">
           <field
            name="name"
        >Support Ticket Overview to Customer - Send by Email</field>
           <field name="email_from">no_reply@burroak.com</field>
           <field name="subject">Your ticket - {{object.id}} has been resolved</field>
           <field name="model_id" ref="helpdesk.model_helpdesk_ticket" />
           <field name="auto_delete" eval="True" />
           <field name="body_html" type="html">

            <div>
                Hello,<br /><br />
                Your ticket <t t-out="object.id or ''">15</t> has been resolved!
                <p>Attached to this email is a overview of your ticket! </p><p><br
                    /></p>
                <p>Please do not reply to this message.</p><br />


                <t t-out="object.company_id.name or 'BOTI'">BOTI</t><br />
                <t t-out="object.company_id.phone" /><br />
                <t t-out="object.company_id.email" /><br />
                <t t-out="object.company_id.website" /><br />
            </div>

            </field>
            <field name="report_template" ref="action_external_ticket_report" />
            <field name="report_name">Ticket Overview</field>
        </record>
</odoo>
