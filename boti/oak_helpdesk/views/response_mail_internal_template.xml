<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

        <record id="email_ticket_response_custom_internal" model="mail.template">
           <field
            name="name"
        >Support Ticket Overview to Users - Send by Email (Internal Use Only)</field>
           <field name="email_from">no_reply@burroak.com</field>
           <field
            name="subject"
        >Internal Overview For Ticket - ${object.name} *Do Not Send to Customer*</field>
           <field name="model_id" ref="helpdesk.model_helpdesk_ticket" />
           <field name="auto_delete" eval="True" />
            <field
            name="body_html"
        ><![CDATA[

<p>Hello,</p>
<p>
    <br>
</p>
<p>Attached to this email is an overview for ticket #${object.id} - ${object.name}.</p>
<p>
    <br>
</p>
<p><font style="background-color:rgb(255, 255, 0);">Note: This is meant for internal use only, do not send to customers!</font></p>
<p><br></p>
<p>- OdooBot<br></p>
<table style="min-width:590px;background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;" width="590" cellspacing="0" cellpadding="0" border="0">
    <tbody>
        <tr>
            <td style="opacity:0.7;" valign="middle" align="left">
                <br>
            </td>
        </tr>
    </tbody>
</table>

<p></p>

            ]]></field>
            <field name="report_template" ref="action_internal_ticket_report" />
            <field name="report_name">Ticket Overview</field>
        </record>

</odoo>
