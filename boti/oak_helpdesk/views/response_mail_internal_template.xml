<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

        <record id="email_ticket_response_custom_internal" model="mail.template">
           <field
            name="name"
        >Support Ticket Overview to Users - Send by Email (Internal Use Only)</field>
           <field name="email_from">no_reply@burroak.com</field>
           <field
            name="subject"
        >Internal Overview For Ticket - {{object.id}} *Do Not Send to Customer*</field>
           <field name="model_id" ref="helpdesk.model_helpdesk_ticket" />
           <field name="auto_delete" eval="True" />
            <field name="body_html" type="html">
                <div>
                    Hello,<br /><br />
                    <p>Attached to this email is an overview for ticket #<t
                        t-out="object.id or ''"
                    >15</t> - <t t-out="object.name or ''">Subject</t>.</p><br />
                    <p><font
                        style="background-color:rgb(255, 255, 0);"
                    >Note: This is meant for internal use only, do not send to customers!</font></p>

                </div>
            </field>
            <field name="report_template" ref="action_internal_ticket_report" />
            <field name="report_name">Ticket Overview</field>
        </record>

</odoo>
