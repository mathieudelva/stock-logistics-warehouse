<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Sales order base form-->
    <record id="sale_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="priority">110</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name='partner_shipping_id' position="after">
                <field name="use_custom_name" invisible="1" />
                <field
                    name="sales_pool_id"
                    domain="[('parent_id.name', 'ilike', 'Sales')]"
                />
                <field
                    name="custom_aa_name"
                    attrs="{'required': [('use_custom_name', '=', True)], 'invisible': [('use_custom_name', '=', False)]}"
                />
            </field>
            <xpath
                expr="//field[@name='order_line']/form/group/group/field[@name='product_id']"
                position="after"
            >
                <field
                    name="sale_line_analytic_plan_id"
                    domain="[('parent_id.name', 'ilike', 'Sales')]"
                />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_id']"
                position="after"
            >
                <field
                    name="sale_line_analytic_plan_id"
                    domain="[('parent_id.name', 'ilike', 'Sales')]"
                    optional="show"
                />
            </xpath>
            <field name="analytic_account_id" position="after">
                <field name="analytic_plan_id" />
            </field>
        </field>
    </record>
</odoo>
