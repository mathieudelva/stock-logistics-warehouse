<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="report_payment_receipt_document"
        inherit_id="account.report_payment_receipt_document"
        priority="100"
    >
        <xpath expr="//table/thead/tr/th[2]" position="replace" />

        <xpath expr="//h3" position="replace">
            <h4><strong>Payment Receipt: <span t-field="o.name" /></strong></h4>
        </xpath>
        <xpath expr="//div/div[3]/div[2]" position="replace">
            <div class="col-6" t-if="o.check_number">
                <strong>Check Number: </strong><span t-field="o.check_number" />
            </div>
        </xpath>
        <xpath expr="//div/table" position="before">
            <p />Price
        </xpath>
        <xpath expr="//table/thead/tr/th[2]" position="after">
            <th>
                <span>Purchase Orders</span>
            </th>
        </xpath>
        <xpath expr="//table/thead/tr/th[3]" position="after">
            <th>
                <span>Cash Discount</span>
            </th>
        </xpath>
        <xpath expr="//table/tbody//tr//td[2]" position="after">
            <td>
                <span
                    t-esc="', '.join(inv.mapped('invoice_line_ids.purchase_order_id.name'))"
                />
            </td>
        </xpath>
        <xpath expr="//table/tbody//tr//td[3]" position="after">
            <td class="text-center">
                <span
                    t-esc="inv.discount_taken"
                    t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"
                />
            </td>
        </xpath>
        <xpath expr="//table/tbody//tr//td[2]" position="replace" />

        <xpath expr="//table/tbody//tr//td[6]" position="replace">
            <td class="text-center">
                <t t-set="amount" t-value="o.amount- inv.discount_taken" />
                <span
                    t-esc="amount"
                    t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"
                />
            </td>
        </xpath>
    </template>
</odoo>
