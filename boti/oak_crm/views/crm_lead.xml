<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- add product type/family to opportunity form -->
    <record id="crm_lead_form_oak_view" model="ir.ui.view">
        <field name="name">crm.lead.oak.form</field>
        <field name="model">crm.lead</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="product_type_category_id" />
                <field name="product_type_id" required="1" />
            </field>
        </field>
    </record>

    <!-- add product type/family to opportunity tree view -->
    <record id="crm_lead_tree_oppor_oak" model="ir.ui.view">
        <field name="name">crm.lead.tree.oppor.oak</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor" />
        <field name="arch" type="xml">
            <field name="contact_name" position="before">
                <field name="product_type_category_id" optional="show" />
                <field name="product_type_id" optional="show" />
            </field>
        </field>
    </record>

    <!-- add product type/family to lead tree view -->
    <record id="crm_lead_tree_lead_oak" model="ir.ui.view">
        <field name="name">crm.lead.tree.lead.oak</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
        <field name="arch" type="xml">
            <field name="contact_name" position="before">
                <field name="product_type_category_id" optional="show" />
                <field name="product_type_id" optional="show" />
            </field>
        </field>
    </record>

    <!-- add group by product_type_id -->
    <record id="crm_lead_search_opportunity_oak" model="ir.ui.view">
        <field name="name">crm.lead.search.opportunity.oak</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter" />
        <field name="arch" type="xml">
            <filter name="source" position="after">
                <filter
                    string="Machine Type Category"
                    name="product_type_category_id"
                    context="{'group_by':'product_type_category_id'}"
                />
                <filter
                    string="Machine Type"
                    name="product_type_id"
                    context="{'group_by':'product_type_id'}"
                />
            </filter>
        </field>
    </record>

</odoo>
