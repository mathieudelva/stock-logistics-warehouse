<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.warranty</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='proforma_configuration']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="warranty_configuration">
                    <div class="o_setting_left_pane">
                        <field name="use_warranty_policy_sales" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="use_warranty_policy_sales" />
                        <span
                            class="fa fa-lg fa-building-o"
                            title="Values set here are company-specific."
                            aria-label="Values set here are company-specific."
                            groups="base.group_multi_company"
                            role="img"
                        />
                        <div class="text-muted">
                            Allows you to save warranty policy disclaimers or other appropriate sales order text per company.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
