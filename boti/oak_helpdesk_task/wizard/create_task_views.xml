<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="create_task_view_form" model="ir.ui.view">
        <field
            name="name"
        >Create a new Task in an existing project from this ticket</field>
        <field name="model">helpdesk.create.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="2">
                        <group>
                            <field name="task_helpdesk_ticket_id" invisible="1" />
                            <field name="name" />
                            <field name="company_id" invisible="1" />
                            <field
                                name="project_id"
                                widget="Many2one"
                                options="{'no_create': 1, 'no_edit': 1}"
                            />
                            <field name="note" invisible="1" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button
                        string="Create &amp; View Task"
                        class="btn btn-primary"
                        name="action_generate_and_view_project_task"
                        type="object"
                    />
                    <button
                        string="Create Task"
                        class="btn btn-primary"
                        name="action_generate_project_task"
                        type="object"
                    />
                    <button
                        string="Discard"
                        class="btn btn-secondary"
                        special="cancel"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>
