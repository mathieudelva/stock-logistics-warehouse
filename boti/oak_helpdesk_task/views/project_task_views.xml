<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="project_task_view_form" model="ir.ui.view">
        <field name="name">project.task.view.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field string="Tickets" name="task_helpdesk_ticket_id" invisible="1" />
                <button
                    string="Parent Ticket"
                    class="oe_stat_button"
                    name="action_view_task_ticket"
                    type="object"
                    icon="fa-life-ring"
                    attrs="{'invisible': [('task_helpdesk_ticket_id', '=', False)]}"
                    groups="helpdesk.group_helpdesk_user"
                    help="Ticket from this Task"
                />
            </xpath>
        </field>
    </record>

</odoo>
