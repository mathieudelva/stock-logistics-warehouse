<odoo>

    <record id="view_account_move_form_bot" model="ir.ui.view">
        <field name="name">account_move_form_bot</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <field name="narration" position="after">
                <field
                    name="invoice_note"
                    placeholder="Invoice Notes..."
                    class="oe_inline"
                    nolabel="1"
                />
            </field>
        </field>
    </record>

    <record id="view_account_move_form_inherit" model="ir.ui.view">
        <field name="name">oak_account_move_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <field name="id" position="after">
                <field name="account_move_domain" invisible="1" />
            </field>
            <field name="partner_id" position="attributes">
                <attribute name="domain">[(account_move_domain,'>',0)]</attribute>
            </field>

        </field>
    </record>

</odoo>
