<odoo>

    <record id="view_move_line_tree_ext" model="ir.ui.view">
        <field name="name">Account Item list: add product Category</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree" />
        <field name="arch" type="xml">
            <field name="account_id" position="after">
                <field name="product_category_id" optional="show" />
            </field>
            <field name="credit" position="after">
                <field name="payment_state" optional="show" />
            </field>
        </field>
    </record>

    <record id="view_account_move_line_filter_payment_state" model="ir.ui.view">
        <field name="name">Journal Items Payment State(Search)</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter" />
        <field name="arch" type="xml">
            <field name="account_id" position="after">
                <field name="payment_state" />
            </field>
            <filter name="group_by_move" position="after">
                <filter
                    string="Payment Status"
                    name="payment_state"
                    context="{'group_by': 'payment_state'}"
                />
            </filter>
        </field>
    </record>
</odoo>
