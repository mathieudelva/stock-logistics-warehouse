<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="mrp_eco_view_form" model="ir.ui.view">
        <field name="name">mrp.eco.view.form.inherit</field>
        <field name="model">mrp.eco</field>
        <field name="inherit_id" ref="mrp_plm.mrp_eco_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field string="Tickets" name="helpdesk_ticket_id" invisible="1" />
                <button
                    string="Helpdesk"
                    class="oe_stat_button"
                    name="action_view_ticket"
                    type="object"
                    icon="fa-life-ring"
                    attrs="{'invisible': [('helpdesk_ticket_id', '=', False)]}"
                    groups="helpdesk.group_helpdesk_user"
                    help="Ticket from this ECO"
                />
            </xpath>
        </field>
    </record>

</odoo>
