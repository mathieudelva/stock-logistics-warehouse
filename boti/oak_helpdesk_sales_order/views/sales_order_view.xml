<odoo>
    <record id="sale_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="priority">111</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field
                    string="Tickets"
                    name="sale_order_helpdesk_ticket_id"
                    invisible="1"
                />
                <button
                    string="Parent Ticket"
                    class="oe_stat_button"
                    name="action_view_sale_order_ticket"
                    type="object"
                    icon="fa-life-ring"
                    attrs="{'invisible': [('sale_order_helpdesk_ticket_id', '=', False)]}"
                    groups="helpdesk.group_helpdesk_user"
                    help="Ticket from this Sales Order"
                />
            </xpath>
        </field>
    </record>
</odoo>
