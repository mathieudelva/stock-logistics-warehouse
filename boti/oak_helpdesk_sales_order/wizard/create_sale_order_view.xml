<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="create_sale_order_view_form" model="ir.ui.view">
        <field name="name">Create a new Sale Order from this ticket</field>
        <field name="model">helpdesk.create.sale_order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="sale_order_helpdesk_ticket_id" invisible="1" />
                            <field name="name" />
                            <field name="company_id" invisible="1" />
                            <field
                                name="sale_order_helpdesk_ticket_id"
                                widget="Many2one"
                                options="{'no_create': 1, 'no_edit': 1}"
                            />
                            <field name="user_id" />
                            <field name="pricelist_id" />
                            <field name="sales_pool_id" />
                        </group>
                        <group>
                            <field name="partner_id" />
                            <field name="partner_invoice_id" />
                            <field name="partner_shipping_id" />
                            <field name="sale_ordered_by_id" />
                            <field name="sale_attention_to_note" />
                        </group>
                    </group>

                </sheet>
                <footer>
                    <button
                        string="Create &amp; View Sales Order"
                        class="btn btn-primary"
                        name="action_generate_and_view_sale_order"
                        type="object"
                    />
                    <button
                        string="Create Sales Order"
                        class="btn btn-primary"
                        name="action_generate_sale_order"
                        type="object"
                    />
                    <button
                        string="Discard"
                        class="btn btn-secondary"
                        special="cancel"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>
