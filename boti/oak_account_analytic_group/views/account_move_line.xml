<odoo>

    <record id="view_move_line_tree_analytic_group" model="ir.ui.view">
        <field name="name">account.move.line.analytic.group</field>
        <field name="model">account.move</field>
        <field name="priority">101</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='invoice_line_ids']/tree[1]/field[@name='account_id']"
                position="before"
            >
                <field name="sale_line_analytic_group_id" optional="show" />
            </xpath>
        </field>
    </record>


     <record id="view_move_line_journal_tree_analytic_group" model="ir.ui.view">
        <field name="name">account.move.line.tree.analytic.group</field>
        <field name="model">account.move.line</field>
        <field name="priority">100</field>
        <field
            name="inherit_id"
            ref="account.view_move_line_tree_grouped_sales_purchases"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_id']" position="after">
                <field
                    name="sale_line_analytic_group_id"
                    string="Type"
                    optional="show"
                />
            </xpath>
        </field>
    </record>

    <record id="view_move_line_tree_analytic_group_ext" model="ir.ui.view">
        <field name="name">account.move.line.tree.analytic.group.ext</field>
        <field name="model">account.move.line</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="account.view_move_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_distribution']" position="before">
                <field
                    name="sale_line_analytic_group_id"
                    string="Type"
                    optional="show"
                />
            </xpath>
        </field>
    </record>

</odoo>
