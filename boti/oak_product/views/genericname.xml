<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- generic name view -->
    <record id="product_generic_name_form_view" model="ir.ui.view">
        <field name="name">product.generic.name.form</field>
        <field name="model">product.generic.name</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Product Generic Names">
                <sheet>
                    <group name="group_general">
                        <field name="name" />
                    </group>
                    <group string="Generic Name Description">
                        <field
                            name="description"
                            nolabel="1"
                            placeholder="Generic Name Purpose."
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_generic_name_tree_view" model="ir.ui.view">
        <field name="name">product.generic.name.tree.view</field>
        <field name="model">product.generic.name</field>
        <field name="arch" type="xml">
            <tree name="Product Generic Names">
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="product_generic_name_search_view" model="ir.ui.view">
        <field name="name">product.generic.name.search</field>
        <field name="model">product.generic.name</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search string="Generic name">
                <field
                    name="name"
                    string="Name"
                    filter_domain="[('name', 'ilike', self)]"
                />
            </search>
        </field>
    </record>

    <record id="action_product_generic_name" model="ir.actions.act_window">
        <field name="name">Generic Names</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.generic.name</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="product_generic_name_tree_view" />
        <field name="search_view_id" ref="product_generic_name_search_view" />
        <field name="context">{}</field>
    </record>

    <menuitem
        id="product_generic_name_menu"
        name="Generic Names"
        parent="sale.prod_config_main"
        action="action_product_generic_name"
        sequence="12"
        groups="product_boti_group_admin"
        active="True"
    />

</odoo>
