<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- return reasons form view -->
    <record id="helpdesk_return_reasons_form_view" model="ir.ui.view">
        <field name="name">helpdesk.return.reasons.form</field>
        <field name="model">helpdesk.return.reasons</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Helpdesk Return Reasons">
                <sheet>
                    <group name="group_general">
                        <field name="name" />
                    </group>
                    <group string="Return Reason Description">
                        <field
                            name="description"
                            nolabel="1"
                            placeholder="Description of Return Reason"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_return_reasons_tree_view" model="ir.ui.view">
        <field name="name">helpdesk.return.reasons.tree.view</field>
        <field name="model">helpdesk.return.reasons</field>
        <field name="arch" type="xml">
            <tree name="Helpdesk Return Reasons">
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="helpdesk_return_reasons_search_view" model="ir.ui.view">
        <field name="name">helpdesk.return.reasons.search</field>
        <field name="model">helpdesk.return.reasons</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search string="Reason">
                <field
                    name="name"
                    string="Name"
                    filter_domain="[('name', 'ilike', self)]"
                />
            </search>
        </field>
    </record>

    <record id="action_helpdesk_return_reasons" model="ir.actions.act_window">
        <field name="name">Reasons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.return.reasons</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="helpdesk_return_reasons_tree_view" />
        <field name="search_view_id" ref="helpdesk_return_reasons_search_view" />
        <field name="context">{}</field>
    </record>

    <menuitem
        id="helpdesk_return_reasons_menu"
        name="Return Reasons"
        parent="helpdesk.helpdesk_menu_config"
        action="action_helpdesk_return_reasons"
        sequence="8"
        groups="helpdesk.group_helpdesk_manager"
        active="True"
    />

</odoo>
