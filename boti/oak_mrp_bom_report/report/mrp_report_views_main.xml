<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="action_report_bom_flat" model="ir.actions.report">
        <field name="name">BoM Single Level</field>
        <field name="model">mrp.bom</field>
        <field name="report_type">qweb-pdf</field>
        <field name="paperformat_id" ref="oak_mrp_bom_report.paperformat_bom_custom" />
        <field name="report_name">oak_mrp_bom_report.report_bom_flat</field>
        <field name="report_file">oak_mrp_bom_report.report_bom_flat</field>
        <field
            name="print_report_name"
        >'Bom Single Level - %s' % object.display_name</field>
        <field name="binding_model_id" ref="mrp.model_mrp_bom" />
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_bom_multi" model="ir.actions.report">
        <field name="name">BoM Multi Level-Page No Raw Matrl</field>
        <field name="model">mrp.bom</field>
        <field name="report_type">qweb-pdf</field>
        <field name="paperformat_id" ref="oak_mrp_bom_report.paperformat_bom_custom" />
        <field name="report_name">oak_mrp_bom_report.report_bom_multi</field>
        <field name="report_file">oak_mrp_bom_report.report_bom_multi</field>
        <field
            name="print_report_name"
        >'Bom Multi Level - %s' % object.display_name</field>
        <field name="binding_model_id" ref="mrp.model_mrp_bom" />
        <field name="binding_type">report</field>
    </record>

</odoo>
