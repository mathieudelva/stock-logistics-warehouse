<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.module.category" id="burroak_category">
        <field name="name">Oak Sales</field>
        <field name="description">Oak other sales permissions.</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_sale_read_only" model="res.groups">
        <field name="name">Read Only</field>
        <field name="category_id" ref="burroak_category" />
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
    </record>

    <record id="sales_team.group_sale_salesman" model="res.groups">
        <field name="name">User: Read Only</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="group_sale_view_all_edit_own" model="res.groups">
        <field name="name">User: View All - Edit Own Documents Only</field>
        <field name="category_id" ref="base.module_category_sales_sales" />
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
    </record>

    <record id="sales_team.group_sale_salesman_all_leads" model="res.groups">
        <field
            name="implied_ids"
            eval="[(4, ref('oak_sale.group_sale_view_all_edit_own'))]"
        />
    </record>

    <function model="sale.order" name="move_cwu_group_access">
        <value>User: Read Only</value>
        <value>User: View All - Edit Own Documents Only</value>
    </function>

</odoo>
