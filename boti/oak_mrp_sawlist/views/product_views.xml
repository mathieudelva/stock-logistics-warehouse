<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Draft product create form extension-->
    <record id="product_template_form_oak_view_inherit" model="ir.ui.view">
        <field name="name">product.template.oak.form_inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="oak_product.product_template_form_oak_view" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <group name="group_general" position="attributes">
                <attribute name="string">Identification</attribute>
                <attribute name="style">width:40%%</attribute>
            </group>
            <field name="generic_name_id" position="after">
                <field name="class_id" />
                <field name="uom_id" required="1" />
                <field name="uom_po_id" required="1" />
            </field>
            <group name="settings" position="replace">
                <group name="dimensions" string="Finish Dimensions" style="width:60%%">
                    <group>
                        <field
                            name="product_finish_length"
                            string="Length"
                            options='{"widget": "float", "precision": 4}'
                        />
                        <field
                            name="product_finish_width"
                            string="Width"
                            options='{"widget": "float", "precision": 4}'
                        />
                        <field
                            name="product_finish_height"
                            string="Height"
                            options='{"widget": "float", "precision": 4}'
                        />
                    </group>
                    <group>
                        <field name="product_finish_length_tolerance_id" />
                        <field name="product_finish_width_tolerance_id" />
                        <field name="product_finish_height_tolerance_id" />
                    </group>
                    <group>
                        <field name="finish_size" string="Finish Size" />
                        <field name="material_id" options="{'no_create': True}" />
                    </group>
                </group>
            </group>
        </field>
    </record>

        <!-- Product (product.template) and variant (product.product) common-->
    <record id="product_template_form_view_oak_inherit" model="ir.ui.view">
        <field name="name">product.template.form.oak</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="oak_product.product_template_form_view_inherit" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <field name="generic_name_id" position="after">
                <field name="class_id" />
            </field>
            <group name="settings" position="replace">
                <group name="dimensions" string="Finish Dimensions" style="width:50%%">
                    <group>
                        <field
                            name="product_finish_length"
                            string="Length"
                            options='{"widget": "float", "precision": 4}'
                        />
                        <field
                            name="product_finish_width"
                            string="Width"
                            options='{"widget": "float", "precision": 4}'
                        />
                        <field
                            name="product_finish_height"
                            string="Height"
                            options='{"widget": "float", "precision": 4}'
                        />
                    </group>
                    <group>
                        <field name="product_finish_length_tolerance_id" />
                        <field name="product_finish_width_tolerance_id" />
                        <field name="product_finish_height_tolerance_id" />
                    </group>
                    <group>
                        <field
                            name="finish_size"
                            string="Finish Size"
                            style="width:200px"
                        />
                        <field
                            name="material_id"
                            options="{'no_create': True}"
                            style="width:200px"
                        />
                    </group>
                </group>
            </group>
        </field>
    </record>
</odoo>
