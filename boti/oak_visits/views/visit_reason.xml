<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- visit reason form view -->
    <record id="visit_reason_form_view" model="ir.ui.view">
        <field name="name">visit.reason.form</field>
        <field name="model">visit.reason</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Visit Reasons">
                <sheet>
                    <group name="group_general">
                        <field name="name" />
                    </group>
                    <group string="Description">
                        <field
                            name="description"
                            nolabel="1"
                            placeholder="Reason for Visit Description."
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="visit_reason_tree_view" model="ir.ui.view">
        <field name="name">visit.reason.tree.view</field>
        <field name="model">visit.reason</field>
        <field name="arch" type="xml">
            <tree name="Visit Reasons">
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="visit_reason_search_view" model="ir.ui.view">
        <field name="name">visit.reason.search</field>
        <field name="model">visit.reason</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search string="Purpose">
                <field
                    name="name"
                    string="Purpose"
                    filter_domain="[('name', 'ilike', self)]"
                />
            </search>
        </field>
    </record>

    <record id="action_visit_reason" model="ir.actions.act_window">
        <field name="name">Purpose</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">visit.reason</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="visit_reason_tree_view" />
        <field name="search_view_id" ref="visit_reason_search_view" />
        <field name="context">{}</field>
    </record>

    <menuitem
        id="visit_reason_menu"
        name="Visit Reasons"
        parent="oak_visits.action_menu_visit_config"
        action="action_visit_reason"
        sequence="3"
        groups="acs_visits.group_visit_manager"
        active="True"
    />

</odoo>
