<odoo>

    <record id="stock_location_content_check_form" model="ir.ui.view">
        <field name="name">stock.location.content.check.form</field>
        <field name="model">stock.location.content.check</field>
        <field name="arch" type="xml">
            <form string="Content Check">
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="date" />
                            <field
                                name="location_id"
                                domain="[('usage', '!=', 'view')]"
                            />
                        </group>
                        <group>
                            <field name="user_id" />
                            <field name="company_id" />
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Products" name="products">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field
                                        name="product_id"
                                        domain="[('type', '=', 'product')]"
                                    />
                                    <field name="expected_qty" />
                                    <field name="current_qty" />
                                    <field name="counted_qty" />
                                    <field name="replenished_qty" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="stock_content_location_check_tree" model="ir.ui.view">
        <field name="name">stock.content.location.check.tree</field>
        <field name="model">stock.location.content.check</field>
        <field name="arch" type="xml">
            <tree string="Content Checks">
                <field name="date" />
                <field name="name" />
                <field name="location_id" />
                <field name="line_ids" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="action_stock_content_location_check" model="ir.actions.act_window">
        <field name="name">Content Checks</field>
        <field name="res_model">stock.location.content.check</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stock_content_location_check_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No check found. Let's create one!
            </p><p>
                Create new check to verify the content of your location and replenish if necessary.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_stock_location_content_check"
        name="Checks"
        parent="stock.menu_stock_warehouse_mgmt"
        action="action_stock_content_location_check"
        sequence="6"
        groups="stock.group_stock_multi_locations"
    />

</odoo>
