<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_report_availability_check_pdf" model="ir.actions.report">
        <field name="name">BoM Availability Check PDF</field>
        <field name="model">mrp.availability.check</field>
        <field name="report_type">qweb-pdf</field>
        <field
            name="paperformat_id"
            ref="mrp_availability_check.paperformat_A4_landscape"
        />
        <field
            name="report_name"
        >mrp_availability_check.report_mrp_availability_check_pdf</field>
        <field
            name="report_file"
        >mrp_availability_check.report_mrp_availability_check_pdf</field>
        <field name="print_report_name">'BoM Availability Check PDF'</field>
    </record>

    <template id="report_mrp_availability_check_pdf">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <h1>Availabity Check Report</h1>
                     <t t-foreach="docs" t-as="o">
                        <div class="row mt32 mb32" style="margin-top:12px;">
                            <div class="col-4">
                                <strong>BoM Product: </strong>
                                <span t-esc="o.product_id.display_name" />
                            </div>
                            <div class="col-4">
                                <strong>Warehouse: </strong>
                                <span t-esc="o.warehouse_id.display_name" />
                            </div>
                            <div class="col-4">
                                <strong>BoM: </strong>
                                <span t-esc="o.bom_id.display_name" />
                            </div>
                        </div>
                        <div class="row mt32 mb32" style="margin-top:12px;">
                            <div class="col-4">
                                <strong>Quantity: </strong>
                                <span t-field="o.requested_qty" />
                                <span
                                    groups="uom.group_uom"
                                    t-field="o.product_uom_id.name"
                                />
                            </div>
                            <div class="col-4">
                            </div>
                            <div class="col-4">
                            </div>
                        </div>
                         <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>On Hand Qty</th>
                                    <th>Forecast Qty</th>
                                    <th>Free To Use Qty</th>
                                    <th>Incoming Qty</th>
                                    <th>Outgoing Qty</th>
                                    <th>Available Qty</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.sum_line_ids" t-as="l">
                                    <td>
                                        <span t-field="l.product_id.display_name" />
                                    </td>
                                    <td>
                                        <span t-esc="l.product_qty" />
                                        <span
                                            t-esc="l.product_uom_id.name"
                                            groups="uom.group_uom"
                                        />
                                    </td>
                                    <td>
                                        <span t-field="l.qty_available" />
                                    </td>
                                    <td>
                                        <span t-field="l.qty_virtual" />
                                    </td>
                                    <td>
                                        <span t-field="l.free_qty" />
                                    </td>
                                    <td>
                                        <span t-field="l.qty_incoming" />
                                    </td>
                                    <td>
                                        <span t-field="l.qty_outgoing" />
                                    </td>
                                    <td>
                                        <span t-field="l.qty_delta" />
                                    </td>
                                </tr>
                            </tbody>
                         </table>
                     </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
