<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record
            id="helpdesk_ticekt_custom_inherit_form_view_new_merge"
            model="ir.ui.view"
        >
            <field name="name">Helpdesk Ticket Inherit form</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form" />
            <field name="arch" type="xml">
                <!-- <xpath expr="//notebook/page[last()]" position="after"> -->
                <xpath expr="//sheet" position="inside">
                    <notebook invisible="True">
                        <page
                            name="merge_tickets"
                            string="Secondary Tickets"
                            attrs="{'invisible' : [('is_secondry','!=',True)]}"
                        >
                            <field
                                name="merge_ticket_ids"
                                domain="[('active','=', False)]"
                                invisible="True"
                            />
                            <field name="is_secondry" invisible="True" />
                        </page>
                    </notebook>
                </xpath>
                <xpath expr="//field[@name='email_cc']" position="after">
                    <field
                        name="primary_ticket_id"
                        attrs="{'invisible' : [('is_secondry','!=',True)]}"
                    />
                    <field
                        name="merge_reason"
                        attrs="{'invisible' : [('is_secondry','!=',True)]}"
                    />
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button
                        name="show_secondry_ticket"
                        type="object"
                        string="Secondry Tickets"
                        icon="fa-pencil-square-o"
                        class="oe_stat_button"
                        attrs="{'invisible' : [('is_secondry','!=',True)]}"
                    />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
