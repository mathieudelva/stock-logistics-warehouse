<?xml version="1.0" ?>
<odoo>
    <record id="mrp_production_tree_view" model="ir.ui.view">
        <field name="name">mrp.production.tree</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field
                    name="date_planned_start_pivot"
                    decoration-warning="state in ('draft', 'confirmed') and date_planned_start_pivot &lt; now"
                    decoration-danger="state in ('draft', 'confirmed') and date_planned_start_pivot &lt; current_date"
                    decoration-bf="state in ('draft', 'confirmed') and (date_planned_start_pivot &lt; current_date or date_planned_start_pivot &lt; now)"
                />
                <field
                    name="date_planned_finished_pivot"
                    decoration-warning="state not in ('done', 'cancel') and date_planned_finished_pivot &lt; now"
                    decoration-danger="state not in ('done', 'cancel') and date_planned_finished_pivot &lt; current_date"
                    decoration-bf="state not in ('done', 'cancel') and (date_planned_finished_pivot &lt; current_date or date_planned_finished_pivot &lt; now)"
                />
                <field name="date_planned_start_wo" optional="hide" />
                <field name="date_planned_finished_wo" optional="hide" />
                <field name="date_actual_start_wo" optional="hide" />
                <field name="date_actual_finished_wo" optional="hide" />
            </field>
            <field name="user_id" position="after">
                <field name="activity_ids" widget="list_activity" optional="hide" />
                <field
                    name="activity_exception_decoration"
                    widget="activity_exception"
                    optional="hide"
                />
            </field>
            <field name="date_planned_start" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="date_deadline" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <button name="button_mark_done" position="after">
                <button
                    name="%(action_mrp_starting)d"
                    type="action"
                    string="WO Starting"
                    attrs="{'invisible': ['|', '|',('is_planned', '=', False),('state', 'in', ('draft','to_close','done','cancel')),('workorder_ids', '=', [])]}"
                    class="oe_highlight"
                    groups="mrp_shop_floor_control.group_mrp_wo_starting"
                />
                <button
                    name="%(action_mrp_confirmation)d"
                    type="action"
                    string="WO Confirmation"
                    attrs="{'invisible': ['|', '|',('is_planned', '=', False),('state', 'in', ('draft','to_close','done','cancel')),('workorder_ids', '=', [])]}"
                    class="oe_highlight"
                />
                <button
                    name="%(action_mrp_closing)d"
                    type="action"
                    string="WO Closing"
                    attrs="{'invisible': ['|', '|',('is_planned', '=', False),('state', 'in', ('draft','to_close','done','cancel')),('workorder_ids', '=', [])]}"
                    class="oe_highlight"
                />
            </button>
            <button name="button_plan" position="attributes">
                <attribute name="string">Schedule WOs</attribute>
                <attribute
                    name="attrs"
                >{'invisible': ['|', '|', ('state', 'not in', ('confirmed','progress','to_close')), ('workorder_ids', '=', []), ('is_planned', '!=', False)]}</attribute>
            </button>
            <button name="button_unplan" position="attributes">
                <attribute name="string">Unschedule WOs</attribute>
                <attribute
                    name="attrs"
                >{'invisible': ['|', '|', ('state', 'not in', ('confirmed','progress','to_close')), ('workorder_ids', '=', []), ('is_planned', '=', False)]}</attribute>
            </button>
            <xpath expr="//page[@name='operations']" position="inside">
                <button
                    name="action_capacity_check"
                    type="object"
                    string="Capacity Load"
                    class="oe_highlight"
                    attrs="{'invisible': ['|', ('state', 'in', ('draft','done','cancel')),('is_planned', '=', False)]}"
                />
            </xpath>

            <xpath expr="//page[1]" position="before">
                <page
                    string="Dates"
                    attrs="{'invisible': [('bom_type', '!=', 'normal')]}"
                >
                    <group>
                        <group>
                            <field name="bom_type" invisible="1" />
                            <field
                                name="planning_mode"
                                attrs="{'readonly': [('is_planned', '!=', False)]}"
                            />
                            <label
                                for="date_planned_start_pivot"
                                string="Planned Dates"
                            />
                            <div class="o_row">
                                <field
                                    name="date_planned_start_pivot"
                                    attrs="{'readonly': [('is_planned', '!=', False)]}"
                                    decoration-warning="state not in ('done', 'cancel') and date_planned_start_pivot &lt; now"
                                    decoration-danger="state not in ('done', 'cancel') and date_planned_start_pivot &lt; current_date"
                                    decoration-bf="state not in ('done', 'cancel') and (date_planned_start_pivot &lt; current_date or date_planned_start_pivot &lt; now)"
                                />
                                <strong
                                    attrs="{'invisible': [('date_planned_finished_pivot', '=', False)]}"
                                    class="mr8"
                                >to</strong>
                                <field
                                    name="date_planned_finished_pivot"
                                    attrs="{'readonly': [('is_planned', '!=', False)]}"
                                />
                            </div>
                            <label
                                for="date_planned_start_wo"
                                string="Scheduled Dates"
                                attrs="{'invisible': [('date_planned_start_wo','=',False)]}"
                            />
                            <div
                                class="o_row"
                                attrs="{'invisible': [('date_planned_start_wo','=',False)]}"
                            >
                                <field
                                    name="date_planned_start_wo"
                                    attrs="{'readonly': [('move_raw_ids', '!=', [])]}"
                                />
                                <strong
                                    attrs="{'invisible': [('date_planned_finished_wo', '=', False)]}"
                                    class="mr8"
                                >to</strong>
                                <field
                                    name="date_planned_finished_wo"
                                    attrs="{'readonly': [('move_raw_ids', '!=', [])]}"
                                />
                            </div>
                            <label
                                for="date_actual_start_wo"
                                string="Actual Dates"
                                attrs="{'invisible': [('date_actual_start_wo', '=', False)]}"
                            />
                            <div
                                class="o_row"
                                attrs="{'invisible': [('date_actual_start_wo', '=', False)]}"
                            >
                                <field name="date_actual_start_wo" readonly="1" />
                                <strong
                                    attrs="{'invisible': [('date_actual_finished_wo', '=', False)]}"
                                    class="mr8"
                                >to</strong>
                                <field name="date_actual_finished_wo" readonly="1" />
                            </div>
                        </group>
                        <group>
                        </group>
                    </group>
                </page>
            </xpath>
            <field name="date_planned_start" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            <notebook>
               <page string="Times" attrs="{'invisible': [('workorder_ids', '=', [])]}">
                    <group col="3">
                        <group string='Standard Times'>
                            <label for="std_setup_time" />
                            <div class="o_row">
                                <field name="std_setup_time" widget="float_time" />
                                <field name="hours_uom" />
                            </div>
                            <label for="std_working_time" />
                            <div class="o_row">
                                <field name="std_working_time" widget="float_time" />
                                <field name="hours_uom" />
                            </div>
                            <label for="std_teardown_time" />
                            <div class="o_row">
                                <field name="std_teardown_time" widget="float_time" />
                                <field name="hours_uom" />
                            </div>
                            <label for="std_overall_time" />
                            <div class="o_row">
                                <field name="std_overall_time" widget="float_time" />
                                <field name="hours_uom" />
                            </div>
                        </group>
                        <group string='Planned Times'>
                            <label for="planned_duration_expected" />
                            <div class="o_row">
                                <field
                                    name="planned_duration_expected"
                                    widget="float_time"
                                />
                                <field name="hours_uom" />
                            </div>
                            <label for="unplanned_duration_expected" />
                            <div class="o_row">
                                <field
                                    name="unplanned_duration_expected"
                                    widget="float_time"
                                />
                                <field name="hours_uom" />
                            </div>
                            <field name="qty_confirmed" />
                        </group>
                        <group string='Actual Times'>
                            <label for="act_setup_time" />
                            <div class="o_row">
                                <field name="act_setup_time" widget="float_time" />
                                <field name="hours_uom" />
                            </div>
                            <label for="act_working_time" />
                            <div class="o_row">
                                <field name="act_working_time" widget="float_time" />
                                <field name="hours_uom" />
                            </div>
                            <label for="act_teardown_time" />
                            <div class="o_row">
                                <field name="act_teardown_time" widget="float_time" />
                                <field name="hours_uom" />
                            </div>
                            <label for="act_overall_time" />
                            <div class="o_row">
                                <field name="act_overall_time" widget="float_time" />
                                <field name="hours_uom" />
                            </div>
                        </group>
                    </group>
               </page>
               <page
                    string="Tools"
                    attrs="{'invisible': [('bom_type', '!=', 'normal')]}"
                >
                    <field name="tool_ids">
                        <tree editable="bottom">
                            <field name="tool_id" />
                            <field name="other_production_id" />
                            <field
                                name="date_next_calibration"
                                widget="remaining_days"
                            />
                            <button
                                name="unallocating_tool"
                                string="Unallocating"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('unallocating_allowed', '!=', False)]}"
                            />
                            <field name="unallocating_allowed" invisible="1" />
                            <button
                                name="attachment_tree_view"
                                type="object"
                                icon="fa-files-o"
                                string="Documents"
                            />
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <record id="view_mrp_production_filter_enhanced" model="ir.ui.view">
        <field name="name">mrp.production.select</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter" />
        <field name="arch" type="xml">
            <filter name="activities_exception" position="after">
                <searchpanel>
                    <field name="state" />
                    <field name="priority" />
                    <field name="reservation_state" />
                </searchpanel>
            </filter>
        </field>
    </record>

    <record id="mrp_production_action" model="ir.actions.act_window">
        <field name="name">Manufacturing Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.production</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
        <field name="view_id" eval="False" />
        <field name="search_view_id" ref="view_mrp_production_filter_enhanced" />
        <field
            name="context"
        >{'search_default_todo': True, 'default_company_id': allowed_company_ids[0]}</field>
        <field
            name="domain"
        >['|',('picking_type_id.active', '=', True),('state','in',('draft','confirmed','progress','to_close'))]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            No manufacturing order found. Let's create one.
            </p><p>
            Consume <a
                    name="%(product.product_template_action)d"
                    type='action'
                    tabindex="-1"
                >components</a> and build finished products using <a
                    name="%(mrp.mrp_bom_form_action)d"
                    type='action'
                    tabindex="-1"
                >bills of materials</a>
            </p>
        </field>
    </record>
</odoo>
