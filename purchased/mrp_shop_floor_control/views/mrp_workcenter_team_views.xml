<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_workcenter_team_view_tree" model="ir.ui.view">
        <field name="name">mrp.workcenter.team.team.tree</field>
        <field name="model">mrp.workcenter.team</field>
        <field name="arch" type="xml">
            <tree string="MRP WorkCenter Team">
                <field name="name" />
                <field name="company_id" />
                <field name="user_id" widget="many2one_avatar_user" />
                <field name="activity_ids" widget="list_activity" />
                <field name="resource_calendar_id" />
            </tree>
        </field>
    </record>

    <record id="mrp_workcenter_team_view_form" model="ir.ui.view">
        <field name="name">mrp.workcenter.team.form</field>
        <field name="model">mrp.workcenter.team</field>
        <field name="arch" type="xml">
            <form string="MRP WorkCenter Team">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget
                            name="web_ribbon"
                            text="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                        />
                        <button
                            class="oe_inline oe_stat_button"
                            name="action_view_workcenter"
                            type="object"
                            icon="fa-cogs"
                        >
                            <field
                                string="WorkCenters"
                                name="mrp_wc_count"
                                widget="statinfo"
                            />
                        </button>
                    </div>
                    <div class="oe_title">
                        <field name="active" invisible="1" />
                        <label for="name" string="MRP WorkCenter Team" />
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" />
                        </group>
                        <group>
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                                options="{'no_open': True, 'no_create': True}"
                            />
                            <!-- <field name="resource_calendar_id" options="{'no_open': True, 'no_create': True}"/> -->
                        </group>
                    </group>
                    <notebook>
                        <page name="members" string="Team Members">
                            <field
                                name="member_ids"
                                widget="many2many"
                                options="{'not_delete': True}"
                            >
                                <kanban
                                    quick_create="false"
                                    create="false"
                                    delete="true"
                                >
                                    <field name="id" />
                                    <field name="name" />
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div
                                                class="oe_kanban_global_click"
                                                style="max-width: 200px"
                                            >
                                                <div class="o_kanban_record_top">
                                                    <img
                                                        t-att-src="kanban_image('res.users', 'image_128', record.id.raw_value)"
                                                        class="oe_avatar oe_kanban_avatar_smallbox o_image_40_cover mb0"
                                                        alt="Avatar"
                                                    />
                                                    <div
                                                        class="o_kanban_record_headings ml8"
                                                    >
                                                        <strong
                                                            class="o_kanban_record_title"
                                                        ><field name="name" /></strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="mrp_workcenter_team_kanban" model="ir.ui.view">
        <field name="name">mrp.workcenter.team.kanban</field>
        <field name="model">mrp.workcenter.team</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id" />
                <field name="user_id" />
                <field name="company_id" />
                <field name="resource_calendar_id" />
                <field name="message_needaction_counter" />
                <field name="activity_ids" />
                <field name="activity_state" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name" />
                                </strong>
                                <ul>
                                    <li>Working Calendar: <field
                                            name="resource_calendar_id"
                                        /></li>
                                </ul>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field
                                        name="activity_ids"
                                        widget="kanban_activity"
                                    />
                                    <t
                                        t-if="record.message_needaction_counter.raw_value"
                                    >
                                        <span
                                            role="alert"
                                            class="oe_kanban_mail_new"
                                            title="Unread Messages"
                                        ><i
                                                class="fa fa-comments"
                                                role="img"
                                                aria-label="Unread Messages"
                                            /><t
                                                t-raw="record.message_needaction_counter.raw_value"
                                            /></span>
                                    </t>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <img
                                        t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)"
                                        t-att-title="record.user_id.value"
                                        t-att-alt="record.user_id.value"
                                        class="oe_kanban_avatar o_image_24_cover float-right"
                                    />
                                </div>
                            </div>
                            <div class="oe_clear" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_mrp_workcenter_team" model="ir.actions.act_window">
        <field name="name">MRP WorkCenter Team</field>
        <field name="res_model">mrp.workcenter.team</field>
        <field name="view_mode">kanban,tree,form,activity</field>
    </record>

    <menuitem
        id="menu_mrp_workcenter_team"
        action="action_mrp_workcenter_team"
        sequence="15"
        parent="mrp.menu_mrp_configuration"
        groups="mrp.group_mrp_user"
    />
</odoo>
