<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.form</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <page name="operations" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('type', 'not in',('normal'))]}</attribute>
            </page>
            <xpath
                expr="//field[@name='bom_line_ids']//tree//field[@name='product_id']"
                position="after"
            >
                <field name="child_bom_id" invisible="1" />
                <button
                    name="open_bom"
                    icon="fa-flask"
                    string="BoM"
                    type="object"
                    attrs="{'invisible':[('child_bom_id','=',False)]}"
                />
            </xpath>
            <notebook>
                <page string="Tools" attrs="{'invisible': [('type','!=', 'normal')]}">
                    <field name="tool_ids">
                        <tree editable="bottom">
                            <field name="tool_id" />
                            <button
                                name="attachment_tree_view"
                                type="object"
                                icon="fa-files-o"
                                string="Documents"
                            />
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
