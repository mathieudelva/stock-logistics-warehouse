<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_capacity_check_view_form" model="ir.ui.view">
        <field name="name">mrp.capacity.check.form</field>
        <field name="model">mrp.capacity.check</field>
        <field name="arch" type="xml">
            <form>
                    <field name="production_id" invisible='1' />
                    <field name="capacity_item_ids" nolabel='1'>
                        <tree edit="0" create="0">
                            <field name="week_nro" />
                            <field name="workcenter_id" />
                            <field
                            name="wo_capacity_requirements"
                            string="WO Requirements (H)"
                        />
                            <field
                            name="wc_available_capacity_cal"
                            string="WC Weekly Available (H)"
                        />
                            <button
                            name="open_pivot_info"
                            type="object"
                            string="Capacity Elaluation"
                            class="oe_highlight"
                        />
                            <field
                            name="all_wo_capacity_requirements"
                            string="WO ALL Requirements (H)"
                        />
                            <field name="wc_capacity_load" string="Loading %" />
                            <field
                            name="wc_remaining_capacity"
                            string="WC Remaining (H)"
                        />
                        </tree>
                        <form string="Capacity Items">
                            <group>
                                <group>
                                     <field name="workcenter_id" />
                                    <field name="week_nro" />
                                </group>
                                <group>
                                    <field
                                    name="wo_capacity_requirements"
                                    string="WO Requirements (H)"
                                />
                                    <field
                                    name="wc_available_capacity_cal"
                                    string="WC Weekly Available (H)"
                                />
                                    <field
                                    name="all_wo_capacity_requirements"
                                    string="WO ALL Requirements (H)"
                                />
                                    <field name="wc_capacity_load" string="Loading %" />
                                    <field
                                    name="wc_remaining_capacity"
                                    string="WC Remaining (H)"
                                />
                                </group>
                            </group>
                        </form>
                    </field>
                <footer>
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
