<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.inherit.mrp.planning.engine</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='mrp']" position="inside">
                <h2>Planning Engine</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_panel" />
                        <div class="o_setting_right_pane">
                            <label for="forward_planning" />
                            <div class="text-muted">
                            Switch to forward planning for planned start pivot date in the past
                            </div>
                            <field name="forward_planning" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_panel" />
                        <div class="o_setting_right_pane">
                            <label for="number_maximum_lots" />
                            <div class="text-muted">
                            Maximum number of allowed procurement proposals in fixed quantity lot method
                            </div>
                            <field name="number_maximum_lots" />
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="confirm_order" />
                            <div class="text-muted">
                            Planned Order Conversion performs MO Confirmation
                            </div>
                            <field name="confirm_order" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_panel" />
                        <div class="o_setting_right_pane">
                            <label for="llc_recursion_limit" />
                            <div class="text-muted">
                            Recursion limit in Low Level Code calculation
                            </div>
                            <field name="llc_recursion_limit" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
     </record>
</odoo>
