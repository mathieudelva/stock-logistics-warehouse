<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_routing_workcenter_tree" model="ir.ui.view">
        <field name="name">qtb.mrp.routing.workcenter.tree</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view" />
        <field name="arch" type="xml">
            <field name="time_cycle" position="after">
                <field name="queue_time_before" string="QTB (minutes)" />
            </field>
        </field>
    </record>

    <record id="mrp_routing_workcenter_form" model="ir.ui.view">
        <field name="name">qtb.mrp.routing.workcenter.form</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view" />
        <field name="arch" type="xml">
            <field name="time_cycle" position="after">
                <label for="queue_time_before" />
                <div class="o_row">
                    <field name="queue_time_before" />
                    minutes
                </div>
            </field>
        </field>
    </record>
</odoo>
